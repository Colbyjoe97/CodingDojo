@model List<Dish>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    @{
        ViewData["Title"] = "Home Page";
    }

    <div class="text-center">
        <h1 class="display-4">Welcome to CRUDelicious!</h1>
    </div>
    <h2 class="text-center">Check out some recent dishes!</h2>
    <table class="table table-hover col-10 mx-auto">
        <thead>
            <tr>
                <th>Name</th>
                <th>Chef</th>
                <th>Calories</th>
                <th>Tastiness</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var dish in Model)
            {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Chef.FirstName @dish.Chef.LastName</td>
                    <td>@dish.Calories</td>
                    <td>@dish.Tastiness</td>
                    <td><a href="/view/@dish.DishId">View | </a><a href="edit/@dish.DishId">Edit | </a><a href="/delete/@dish.DishId">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>