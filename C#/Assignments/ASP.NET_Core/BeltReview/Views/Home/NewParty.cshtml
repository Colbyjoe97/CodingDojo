@model Party
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form asp-action="CreateParty" asp-controller="Home" method="post" class="col-6 mx-auto bg-light p-5 rounded">
        <h2 class="text-center">Create Watch Party</h2>
        <div class="form-group">
            <label asp-for="ShowName"></label>
            <input asp-for="ShowName" class="form-control">
            <span class="text-danger" asp-validation-for="ShowName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Start"></label>
            <input asp-for="Start" class="form-control">
            <span class="text-danger" asp-validation-for="Start"></span>
        </div>
        <div class="form-group">
            <label asp-for="Platform"></label>
            <input asp-for="Platform" class="form-control">
            <span class="text-danger" asp-validation-for="Platform"></span>
        </div>
        <div class="text-cetner">
            <input type="submit" class="btn btn-success" value="Create">
        </div>
    </form>
</body>
</html>