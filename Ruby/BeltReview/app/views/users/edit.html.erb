<div class="editWrapper p-5">
    <h1>Editing <%= current_user.first_name %></h1>
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p class="text-danger"><%= error %></p>
        <% end %>
    <% end %>
    <form action="/update/<%=current_user.id%>/user" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div>
            <p>First Name:</p>
            <input type="text" name="first_name" placeholder="<%=current_user.first_name%>">
        </div>
        <div>
            <p>Last Name:</p>
            <input type="text" name="last_name" placeholder="<%=current_user.last_name%>">
        </div>
        <div>
            <p>Email:</p>
            <input type="text" name="email" placeholder="<%=current_user.email%>">
        </div>
        <div>
            <p>Location:</p>
            <select name="location">
                <option value="Belleview">Belleview</option>
                <option value="Las Angeles">Las Angeles</option>
                <option value="Seattle">Seattle</option>
                <option value="Sykesville">Sykesville</option>
            </select>
        </div>
        <div>
            <p>Password:</p>
            <input type="text" name="password">
        </div>
        <div>
            <p>Confirm Password:</p>
            <input type="text" name="password_confirmation">
        </div>

        <button class="btn btn-success mt-2">Update User</button>
    </form>
    <a href="/events">Go Back</a>
</div>