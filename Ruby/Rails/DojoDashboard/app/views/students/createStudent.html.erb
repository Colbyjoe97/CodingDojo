<div class="addStudentWrapper">
    <h1>New Student</h1>
    <form action="/dojos/<%=@dojo.id%>/students" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div>
            <p>First Name:</p>
            <input type="text" name="first_name" placeholder="First Name">
        </div>
        <div>
            <p>Last Name:</p>
            <input type="text" name="last_name" placeholder="Last Name">
        </div>
        <div>
            <p>Email:</p>
            <input type="text" name="email" placeholder="Email">
        </div>
        <div>
            <p>Dojo:</p>
            <select name="dojo">
                    <option value="<%=@dojo.id%>"><%=@dojo.branch%></option>
                    <% @allDojos.each do |dojos| %>
                        <% if dojos.id != @dojo.id %>
                            <option value="<%=dojos.id%>"><%=dojos.branch%></option>
                        <% end %>
                    <% end %>
                </select>
            </div>
            <div>
                <button class="btn btn-success mt-3">Submit Student</button>
            </div>
        </form>
        <a href="/dojos/<%=@dojo.id%>"><%=@dojo.branch%></a> |
        <a href="/dojos">Home</a>
    </div>