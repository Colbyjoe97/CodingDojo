<p>Editing <%= @student.first_name %></p>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p class="text-danger"><%= error %></p>
    <% end %>
<% end %>
<form action="/students/<%=@student.id%>/edit" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div>
        <p>First Name:</p>
        <input type="text" name="student[first_name]" value="<%= @student.first_name %>">
    </div>
    <div>
        <p>Last Name:</p>
        <input type="text" name="student[last_name]" value="<%= @student.last_name %>">
    </div>
    <div>
        <p>Email:</p>
        <input type="text" name="student[email]" value="<%= @student.email %>">
    </div>
    <div>
    <p>Dojo:</p>
    <select name="student[dojo_id]" required="True">
            <option value="<%=@dojo.id%>"><%=@dojo.branch%></option>
            <% @dojos.each do |dojo| %>
                <% if dojo.id != @dojo.id %>
                    <option value="<%=dojo.id%>"><%=dojo.branch%></option>
                <% end %>
            <% end %>
        </select>
    </div>
    <div>
        <button class="btn btn-success mt-3">Submit Student</button>
    </div>
</form>