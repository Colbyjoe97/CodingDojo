<div class="editWrapper text-center">
    <h1>Editing <%=@dojo.branch%> Dojo</h1>
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p class="text-danger"><%= error %></p>
        <% end %>
    <% end %>
    <form action="/dojos/<%=@dojo.id%>" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="row">
            <p>Branch:</p>
            <input type="text" name="dojo[branch]" value="<%= @dojo.branch %>">
        </div>
        <div class="row">
            <p>Street:</p>
            <input type="text" name="dojo[street]" value="<%= @dojo.street %>">
        </div>
        <div class="row">
            <p>City:</p>
            <input type="text" name="dojo[city]" value="<%= @dojo.city %>">
        </div>
        <div class="row">
            <p>State:</p>
            <input type="text" name="dojo[state]" value="<%= @dojo.state %>">
        </div>
        <button class="ben btn-success">Submit Dojo</button>
    </form>
</div>