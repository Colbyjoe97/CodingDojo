<div class="viewWrapper text-center">
        <h1>Viewing <%= @dojo.branch %> Dojo</h1>
        <b><p>Address: <%= @dojo.street %></p></b>
        <b><p>City: <%= @dojo.city %></p></b>
        <b><p>State: <%= @dojo.state %></p></b>
        <h3>Student Roster</h3>
        <table class="table table-hover viewTable">
            <thead>
                <tr>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Email</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                <% @students.each do |student| %>
                <tr>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.email %></td>
                    <td>
                        <a href="<%= student_path student.id %>">Show</a> |
                        <a href="<%= edit_student_path student.id %>">Edit</a> |
                        <a href="/students/<%=student.id%>" data-method="delete">Delete</a>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <a href="<%= dojos_path %>">Home</a> |
        <a href="<%= edit_dojo_path @dojo.id %>">Edit</a> |
        <a href="/dojos/<%=@dojo.id%>/students/new">Add Student</a>
</div>